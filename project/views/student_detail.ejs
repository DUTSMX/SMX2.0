<script>
    $(document).ready(function(){

        $("#reinfo").hide();
        $(".pbutton_re1").hide();
        $(".pbutton_re2").hide();
        $(".pbutton_1").hide();
        $("#apply_finish").hide();
        $("#revise").click(function(){
            $(".pbutton_1").fadeIn(1000);
            $("#info").fadeOut(1000);
            $("#reinfo").fadeIn(1000);
            $("#revise").fadeOut(1000);
            $("#save").fadeIn(1000);
        });
        $("#apply").click(function(){
            $(".pbutton_re1").fadeIn(1000);
            $(".pbutton_re2").fadeIn(1000);
            $("#apply").hide();
            $("#apply_finish").fadeIn(1000);
        });
        $("#apply_finish").click(function(){
            $(".pbutton_re1").hide();
            $(".pbutton_re2").hide();
            $("#apply").fadeIn(1000);
            $("#apply_finish").hide();
        });

    });
</script>
