        //保证只有出现一个.而没有多个.
        obj.value = obj.value.replace(/\.{2,}/g,".");
        //保证.只出现一次，而不能出现两次以上
        obj.value = obj.value.replace(".","$#$").replace(/\./g,"").replace("$#$",".");
        //保证 数字整数位不大于11位
        if(100<=parseFloat(obj.value))
            obj.value = "";
        if(parseFloat(obj.value)<0)
         obj.value="";
    }
